<div class="text-center">
    <div class="row">
        <div>
            <form method="post" asp-action="Create" asp-controller="Transaction">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="StoreId" class="control-label">Store name</label>
                    <select asp-for="StoreId" class="form-control" asp-items="stores"></select>
                    <span asp-validation-for="StoreId" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="CategoryId" class="control-label">Category name</label>
                    <select asp-for="CategoryId" class="form-control" asp-items="categories"></select>
                    <span asp-validation-for="CategoryId" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Amount" class="control-label">Category name</label>
                    <input asp-for="Amount" class="form-control" value="@Model.Amount" />
                    <span asp-validation-for="Amount" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="AdditionalNote" class="control-label"></label>
                    <textarea asp-for="AdditionalNote" class="form-control" rows="6" cols="50"></textarea>
                    <span asp-validation-for="AdditionalNote" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Add transaction" class="btn btn-info" />
                </div>
            </form>
        </div>
    </div>
</div>