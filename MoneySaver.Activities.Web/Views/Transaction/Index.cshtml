@model MoneySaver.Activities.Models.TransactionVM
@{
    ViewData["Title"] = "Transactions";
    var categories = ViewData["Categories"] as IEnumerable<SelectListItem>;
    var stores = ViewData["Stores"] as IEnumerable<SelectListItem>;
}
